<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/vr_cate_bg">


    <com.hotcast.vr.imageView.Image3DSwitchView
        android:id="@+id/id_sv"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.hotcast.vr.imageView.Image3DSwitchView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_sv"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15sp"
        android:text="影片标题"/>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:text="影片描述"/>
    <Button
        android:id="@+id/bt_ceach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="下载"/>

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_ceach"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="1/5"/>

<LinearLayout
    android:id="@+id/ivBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/buttom"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14px"
        android:src="@mipmap/vr_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:text="返回上一级"/>
</LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@id/ivBack"
        android:src="@drawable/left"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:rotation="180"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@id/ivBack"
        android:src="@drawable/right"/>

</RelativeLayout>